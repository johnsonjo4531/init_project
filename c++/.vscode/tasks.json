{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build main.cpp file",
            "command": "/usr/lib64/ccache/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-pedantic-errors",
                "-std=c++23",
                "-Wall", 
                "-Weffc++", 
                "-Wextra", 
                "-Wconversion", 
                "-Wsign-conversion",
                "-Werror",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/build/main.o"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by init_project."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/lib64/ccache/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-pedantic-errors",
                "-std=c++23",
                "-Wall", 
                "-Weffc++", 
                "-Wextra", 
                "-Wconversion", 
                "-Wsign-conversion",
                "-Werror",
                "${file}",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}.o"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by init_project."
        }
    ],
    "version": "2.0.0"
}